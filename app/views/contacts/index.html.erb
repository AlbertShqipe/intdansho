<div class="container" style="margin-top:150px">
  <div class="container">
    <h1 class="h1">MESSAGES</h1>
    <% if @contacts.count < 1 %>
        <p class="p">Vous pouvez consulter les messages envoy√©s par les visiteurs de votre site.</p>
        <p class="p">Pour le moment il n'y a pas des messages.</p>
      <% else %>
        <p class="p">Ici vos messages</p>
    <% end %>
  <div style="width:60%" class="mx-auto">
    <% @contacts.each do |contact| %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title" style="text-align:left">Name: <%= contact.name %></h5>
              <p class="card-text">Email: <%= contact.email %></p>
              <p class="card-text">Message: <br><%= contact.message %></p>
            </div>
          </div>
          <div class="col-md-4">
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
